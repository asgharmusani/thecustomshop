<!--Single Product Area Start-->
<section class="single-product-area mt-20">
  <div class="adminMain">
    {{#if flashMessage}}
    <div id="message" data-status="{{flashMessage.status}}" data-value="{{flashMessage.value}}"></div>
    {{/if}}
    <div class="container-fluid">
      <!--Single Product Info Start-->
      <div class="row mtb-20">

        <div class="single-product-info mb-50">

          <h2 class=" ml-15"><b>Add Product</b></h2>
          <!--Single Product Image Start-->
          <form action="/admin-panel/product/save" method="POST" enctype="multipart/form-data">
            <!--Single Product Content Start-->
            <div class="col-md-6 col-sm-6">
              <div class="single-product-content">
                <h3>
                  <b>Select Sub Category:</b>
                  <select class="selectAdmin mt-10" id="subCategory" name="subCategory">
                    <option value="0">--Select Category--</option>
                    <optgroup label="Suits" id="category" name="category" value="1">
                      <option value="1;1">Two Piece Suit</option>
                      <option value="1;2">Three Piece Suit</option>
                      <option value="1;3">Jackets</option>
                    </optgroup>
                    <optgroup label="Formal" id="category" name="category" value="2">
                      <option value="2;6">Shirts</option>
                      {{!-- <option value="4">Pants</option> --}}
                    </optgroup>
                    <optgroup label="Accessories" id="category" name="category" value="3">
                      <option value="3;8">Ties</option>
                      <option value="3;9">Cuffs</option>
                    </optgroup>
                  </select>
                </h3>
                <h3 class=" mt-10">
                  <b>Title</b>
                  <input type="text" placeholder="Enter Product Title" class="mt-10 form-control" name="title" id="title">
                </h3>

                <!--Product Price Start-->
                <div class="single-product-price mtb-10">
                  {{!-- <span class="old-price"></span> --}}
                  <span class="new-price">Price
                    <input type="text" class="form-control" placeholder="Enter Price" name="price" id="price">
                  </span>
                </div>
                <!--Product Price End-->
                <!--Product Description Start-->
                <div class="product-description">
                  <p class=" text-justify">
                    <h3><b>Description:</b></h3>
                    <textarea id="" cols="30" rows="10" placeholder="Enter Product Description" name="description" id="description">{{product.description}}</textarea>
                    <h3><b>Tags:</b></h3>
                    <textarea id="" cols="30" rows="10" placeholder="Enter Tags" name="tags" id="tags"></textarea>
                  </p>
                </div>
                <!--Product Description End-->
                <!--Product Quantity Start-->
                <div class="single-product-quantity">
                  <div class="quantity">
                    <label><b>Quantity</b></label>
                    <input class="input-text" style="width:70%" placeholder="Available Stock" value="" min="0" type="number"
                      name="qty" id="qty">
                  </div>
                  <div class="checkbox">
                    <label style="color:red;"><input type="checkbox" style="height:15px;width:15px;" name="outOfStock"
                        id="outOfStock">Out
                      of Stock</label>
                  </div>
                  <button class="quantity-button" type="submit">Save</button>
                </div>
                <!--Product Quantity End-->

              </div>
            </div>
            <div class="col-md-6 col-sm-6">

              <h3 class=" mt-10 mb-10"><b>Product Images</b></h3>
              <table id="imagesTable" style="width:100%">
                <tbody>
                  <tr>
                    <td>
                      <input type="file" class="form-control" name="productImage">
                    </td>
                  </tr>
                </tbody>
              </table>
              <button class=" form-button mtb-30" id="addImages">Add more images</button>
              <br />
              <h3 class=" mb-10"><b>Add Fabric</b></h3>
              <div class="checkbox">
                <label><input type="checkbox" style="height:15px;width:15px;" name="isNewFabric" id="isNewFabric">New</label>
              </div>
              <input type="text" id="fabricName" class=" form-control mb-20 mt-10" name="fabricName" id="fabricName"
                placeholder="Fabric Name">
              <input type="file" class="form-control" name="fabricImage">
            </div>
            <!--Single Product Image End-->
          </form>
          <!--Single Product Content End-->
        </div>
      </div>
      <!--Single Product Info End-->
    </div>
  </div>
</section>

<!--Single Product Area End-->
<script src="/js/custom/admin_product.js"></script>