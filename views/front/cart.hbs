<!--Shopping Cart Area Start-->
<div class="shopping-cart-area mt-20">
  <div class="container">
    <div class="heading-banner-title">
      <h1>Shopping Cart</h1>
    </div>
    {{#if basket.length}}

    <input class=" hidden" id="len" value="{{basket.length}}" />
    <div class="row">
      <div class="col-md-12">
        <form class="shop-form" action="#">
          <div class="wishlist-table table-responsive">
            <table>
              <thead>
                <tr>
                  <th class="product-remove"></th>
                  <th class="product-cart-img">
                    <span class="nobr"><b>Product Image</b></span>
                  </th>
                  <th class="product-name">
                    <span class="nobr"><b>Product Name</b></span>
                  </th>
                  <th class="product-quantity">
                    <span class="nobr"><b>quantity</b></span>
                  </th>
                  {{!-- <th class="">
                    <span class="nobr">size</span>
                  </th> --}}
                  <th class="product-price">
                    <span class="nobr"><b> Unit Price</b> </span>
                  </th>
                  <th class="product-total-price">
                    <span class="nobr"><b> Total Price</b> </span>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each cartProducts}}
                <tr data-url="/cart/add/{{id}}" data-action="add-to-cart" data-qtyReplace="{{qty}}">
                  <td class="product-remove">
                    <a href="/cart/remove/{{id}}" title="Remove {{title}}"><i class=" fa fa-trash" style="color:rgb(170, 15, 15)"></i></a>
                  </td>
                  <td class="product-cart-img">
                    <a href="/category/{{ProductCategory.category}}/{{Tags.0.tag}}/{{titleLink title}}"><img src="/data/product/{{id}}/{{ProductImages.0.id}}/150/150"
                        alt=""></a>
                  </td>
                  <td class="product-name">
                    <a href="/category/{{ProductCategory.category}}/{{Tags.0.tag}}/{{titleLink title}}">{{title}}</a>
                  </td>
                  <td class="product-quantity">
                    <div class="quantityCart">
                      <input id="cartQuantity" class="input-text small" value="{{qty}}" min="0" type="number" oninput="addToCart()">
                    </div>
                    {{!-- <select>
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                    </select> --}}
                  </td>
                  {{!-- <td>
                    <a href="#">
                      S / M / L
                    </a>
                  </td> --}}
                  <td class="product-price">
                    <span style="font-weight:600;font-size:14px"> Rs. {{ProductPrices.0.price}}</span>
                  </td>
                  <td class="product-total-price">
                    <span style="font-size:14px"> <b>Rs. {{totalPrice}}</b> </span>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-6">
        <form action="#">
          <div class="cart-collaterals">
            <div class="cart-cuppon">
              <div class="coupon">
                <input name="coupon_code" class="input-copun" value="" placeholder="Coupon code" type="text">
                <button type="submit" class="wishlist-btn shopping-btn">Apply coupon</button>
              </div>
              {{!-- <button class="update-btn" type="submit">Update cart</button> --}}
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6 col-sm-6">
        <div class="shopping-cart-total">
          <h2>Cart totals</h2>
          <div class="shop-table table-responsive">
            <table>
              <tbody>
                <tr class="cart-subtotal">
                  <td data-title="Subtotal" id="subTotal"><span>Rs. {{orderTotal}}</span></td>
                </tr>
                <tr class="shipping">
                  <td data-title="Shipping" id="shipping">Flat Rate: <Span>Rs. 1500</Span></td>
                </tr>
                <tr class="order-total">
                  <td data-title="Total" id="total"><span><strong></strong></span></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="proceed-to-checkout">
            <a class="checkout-button " href="/checkout">Proceed to checkout</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <div class=" pt-50 pb-100 text-center">
    <h3>Your Cart is Empty.</h3>
    <a href="/"><b>Go back to Shopping</b></a>
  </div>
  {{/if}}
</div>
<!--Shopping Cart Area End-->

<script src="/js/custom/cart.js"></script>