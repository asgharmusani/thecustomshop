<!--Single Product Area Start-->
<section class="single-product-area mt-20">
  <div class="container">
    <!--Single Product Info Start-->
    <div class="row">
      <div class="single-product-info mb-50">
        <!--Single Product Image Start-->
        <div class="col-md-6 col-sm-6">
          <!--Product Tab Content Start-->
          <div class="single-product-tab-content tab-content">
            <div id="w1" class="tab-pane fade in active">
              <div class="easyzoom easyzoom--overlay">
                <a href="/data/product/{{product.id}}/{{product.ProductImages.0.id}}/1520/1520">
                  <img src="/data/product/{{product.id}}/{{product.ProductImages.0.id}}/600/600" alt="">
                </a>
              </div>
            </div>
            {{#each product.ProductImages }}
            <div id="w{{this.id}}" class="tab-pane fade">
              <div class="easyzoom easyzoom--overlay">
                <a href="/data/product/{{../product.id}}/{{this.id}}/1520/1520">
                  <img src="/data/product/{{../product.id}}/{{this.id}}/600/600" alt="">
                </a>
              </div>
            </div>
            {{/each}}
          </div>
          <!--Product Tab Content End-->
          <!--Single Product Tab Menu Start-->
          <div class="single-product-tab">
            <div class="single-product-tab-menu owl-carousel">
              {{#each product.ProductImages }}
              <a data-toggle="tab" href="#w{{this.id}}"><img src="/data/product/{{../product.id}}/{{this.id}}/100/100"
                  alt=""></a>
              {{/each}}
            </div>
          </div>
          <!--Single Product Tab Menu Start-->
        </div>
        <!--Single Product Image End-->
        <!--Single Product Content Start-->
        <div class="col-md-6 col-sm-6">
          <div class="single-product-content">
            <h1 class="product-title">{{product.title}}</h1>

            <!--Product Price Start-->
            <div class="single-product-price">
              {{!-- <span class="old-price"></span> --}}
              <span class="new-price">Rs. {{product.ProductPrices.0.price}}</span>
            </div>
            <!--Product Price End-->
            <!--Product Description Start-->
            <div class="product-description">
              <p class=" text-justify">{{product.description}}</p>
            </div>
            {{#if product.ProductFabric}}
            <div>
              <span><b>Fabric</b></span>
              <label>{{product.ProductFabric.text}}</label>
            </div>

            {{/if}}
            <!--Product Description End-->
            <!--Product Quantity Start-->
            <div class="single-product-quantity">
              <form action="/cart/add/{{product.id}}" method="POST">
                <div class="quantity">
                  <label>Quantity</label>
                  <input class="input-text" id="qty" name="qty" value="1" min="0" type="number">
                </div>
                {{#if haveStock}}
                <span class="outOfStock">Out of Stock</span>
                {{/if}}
                <button class="quantity-button" type="submit">Add to cart</button>
              </form>
            </div>
            <!--Product Quantity End-->
            <!--Wislist Compare Button Start-->
            {{!-- <div class="wislist-compare-btn">
              <ul>
                <li><a class="wishlist" href="#">Add To Wishlist</a></li>
                <li><a class="compare" href="#">Compare</a></li>
              </ul>
            </div> --}}
            <!--Wislist Compare Button End-->

            <!--Product Sharing Start-->
            <div class="single-product-sharing">
              <ul>
                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
              </ul>
            </div>
            <!--Product Sharing End-->
          </div>
        </div>
        <!--Single Product Content End-->
      </div>
    </div>
